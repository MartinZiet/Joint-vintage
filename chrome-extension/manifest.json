{
  "manifest_version": 2,

  "name": "Joint",
  "description": "Direct bookmarking",
  "version": "0.1",

  "browser_action": {
    "default_icon": "joint-logo.png",
    "default_popup": "login.html"
  },
  
  "icons": {
  	"16": "joint-logo-16px.png",
  	"48": "joint-logo-48px.png"
  },
  
  "background": {
  	"scripts": ["joint-api.js","background.js"]
  },
  
  "content_scripts": [
    {
      "matches": ["*://*/*"],
      "js": ["selection.js"]
    }
  ],
  
  "permissions": [
  	"contextMenus",
    "activeTab",
    "*://*/*"
  ]
}